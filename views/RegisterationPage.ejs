    <form action="/RegisterationPage" method="POST" >
      <label for="name">Name: </label><br/>
       <input type="text" name="name" id="name"  autocomplete="off" placeholder="Name" value="<%= (typeof name !=='undefined') ? name:'' %>" /><br />
       <label for="Email">Email: </label><br/>
        <input type="email" name="Email" id="Email" autocomplete="off" placeholder="Email" value="<%= (typeof Email !=='undefined') ? Email:'' %>"/><br />
       <label for="Password">Password: </label><br/>
      <input type="password" name="Password" id="Password" autocomplete="off" placeholder="Password"/><br />
       <label for="ConfirmPassword">ConfirmPassword: </label><br/>
       <input type="password" name="ConfirmPassword" id="ConfirmPassword" autocomplete="off" placeholder="Password" /><br />
        <label for="Gender">Gender: </label><br/>
       <select name="Gender" >
        <option value="Select the Gender">Select the Gender</option>
         <option value="Male">Male</option>
         <option value="Female">Female</option>
       </select>
        <button class="btn"type="submit">SIGN UP</button>
    </form>
   
