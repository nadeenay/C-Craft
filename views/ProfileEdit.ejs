
<%- include('layouts/header')%>
<div class="wrapper">
    <h1 style="color: rgb(113, 207, 176);" >EDIT YOUR PROFILE !</h1>
      <% if(typeof errors!=='undefined'){ %>
          <%errors.forEach(error=>{%>
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                   <%=error.msg%>
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
            
          <%})%>
          <%}%>
<form action="/ProfileEdit" method="POST" enctype="multipart/form-data" >
<% if (user.image) { %>
  <div class="images">
      <img  src="/uploads/<%= user.image %>" ></div>
      <% } else { %>
        <div>
      <img  src="/img/<%= user.Gender %>.jpg"  ></div>
      <% } %>
<!-- <div class="file-field input-field"> -->
  <div>
  <!-- <div class="btn grey"> -->
    <!-- <span>Choose your profilepicture</span> -->
    <input name="MyImage" type="file">
  <!-- </div> -->
  <!-- <div class="file-path-wrapper">
    <input class="file-path validate" type="text">
  </div> -->
</div>
<label for="name">Name: </label><br/>
     <input class="in" type="text" name="name" id="name"  autocomplete="off" placeholder="Name" value="<%= (typeof name !=='undefined') ? name:'' %>" /><br />
    <label for="Bio">Bio: </label><br/>
    <input class="in" type="text" name="Bio" id="Bio" placeholder="Bio" autocomplete="off" value="<%= (typeof Bio !=='undefined') ? Bio:'' %>" /><br />
    <label for="Gender">Gender: </label><br/>
   <select name="Gender" value="<%= (typeof Gender !=='undefined') ? Gender:'' %>">
    <option value="Select the Gender">Select the Gender</option>
     <option value="Male">Male</option>
     <option value="Female">Female</option>
   </select>
    <button class="btn" type="submit" class="btn">Done</button>
</form>
</div>
